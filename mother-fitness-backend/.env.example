# Server Configuration
PORT=5000
NODE_ENV=production
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d

# Database Configuration (MongoDB)
# Local Mastery: mongodb://localhost:27017/mother_fitness
# Cloud Mirror: mongodb+srv://<username>:<password>@cluster.mongodb.net/mother_fitness_db
MONGODB_URI=mongodb://localhost:27017/mother_fitness

# Hybrid Cloud Sync Configuration
# Set to 'true' on the Render cloud instance ONLY
IS_CLOUD_MIRROR=false
# The public URL of your cloud instance (e.g., https://yourapp.onrender.com)
CLOUD_API_URL=
# A secret key to secure communication between local and cloud
SYNC_KEY=generate_a_secret_key_here

# Email Service (Gmail via Nodemailer)
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password

# Admin Credentials
ADMIN_EMAIL=admin@motherfitness.com
